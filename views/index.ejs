  <script type="text/javascript">
    let url = "http://localhost:7777/re"

function ajaxCall(){
   $.ajax({
        type: 'GET',
        //data: JSON.stringify(data),
        contentType: "application/json",
        dataType:'json',
        url: url,                      
        success: (data) => {
            //alert('success')
            let name = data.userwin 
            let userwin =""          
            let ArrayData = name.split(',')
            for (let i = 0; i < ArrayData.length ; i++) {
               userwin += "<a class='badge badge-primary'>"+ ArrayData[i] + "</a>" + " "
            }
            document.getElementById('winner').innerHTML= userwin 

            name = data.dataname          
            ArrayData = name.split(',').map(el =>{
                let n = Number(el)
                return n === 0 ? n : n || el
            }).sort()
            
            let o2 = ""
            o2 = o2 + "<thead>"
            o2 = o2 + "<tr>"
            o2 = o2 + "<th scope='col'>#</th>"
            o2 = o2 + "<th scope='col'>Name</th>"
            o2 = o2 + "<th scope='col'>Try</th>"
            o2 = o2 + "</tr>"
            o2 = o2 + "</thead>"
            
            o2 = o2 + "<tbody>"
            let lastname = ""
            let curname = ""
            let count = 0
            let tmp = 1
            for (let i = 0; i < ArrayData.length ; i++) {
                curname = ArrayData[i]           
                if(curname != lastname){
                  o2 = o2 + "<tr>"
                  o2 = o2 + "<th scope='row'>"+ tmp +"</th>"
                  o2 = o2 + "<td>"+ curname + "</td>"
                  for(x in ArrayData){
                    if(curname == ArrayData[x]){
                      count += 1
                    }
                  }
                  o2 = o2 + "<td>"+ count +"</td>"
                  o2 = o2 + "</tr>"
                  lastname = curname
                  count = 0
                  tmp += 1
                }
            }
            o2 = o2 + "</tbody>"          
            document.getElementById("Sdoc").innerHTML = o2
            o2 = ""
            tmp = 1   
        },
        error: (error)=> {
            console.log("some error in fetching the notifications")
         }

    })
}

function showResult() {  
            $('Sdoc').update(ajaxCall())
}

setInterval(showResult,3000)

  </script>
